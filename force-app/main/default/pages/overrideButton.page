<apex:page standardController="Class__c">
    <apex:form >
        <apex:pageBlock title="New Class">
            <apex:pageMessages />
            <apex:pageBlockSection columns="1">
                <apex:inputField value="{! Class__c.Name}" ></apex:inputField>
                <apex:inputField value="{! Class__c.Board__c}" ></apex:inputField>
                <apex:inputField value="{! Class__c.Fee__c}" ></apex:inputField>
                <apex:inputField value="{! Class__c.MaxSize__c}" ></apex:inputField>
            </apex:pageBlockSection>
            <apex:pageBlockSection >
                <apex:commandButton action="{! save}" value="Save" />
            </apex:pageBlockSection>
        </apex:pageBlock>
    </apex:form>
</apex:page>